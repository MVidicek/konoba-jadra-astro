---
import Layout from '../../layouts/Page.astro';
import HeroSection from '../../components/sections/heros/HeroSection.astro';

const seo = {
	title: 'The Menu | Jadra',
	description: 'Restaurant seafood menu page containing images of the menu and prices.',
};
---

<Layout {seo}>
	<div class="img-container-countries container">
		<img class="img-country" src="/assets/images/countries/croatia.png" alt="croatian flag">
		<img class="img-country" src="/assets/images/countries/germany.png" alt="croatian flag">
		<img class="img-country" src="/assets/images/countries/italy.png" alt="croatian flag">
		<img class="img-country" src="/assets/images/countries/united-kingdom.png" alt="croatian flag">
	</div>
	<HeroSection>
			<picture slot="image-container-drinks">
				<img
					src="/assets/images/menu/drinks-hr.png"
					alt="Menu Drinks"
					id="home-hero-image-drinks"
				/>
			</picture>
    <picture slot="image-container">
      <img
        src="/assets/images/menu/menu-hr.png"
        alt="Menu Food"
        id="home-hero-image"
      />
    </picture>
	</HeroSection>
</Layout>

<style>
	.img-country{
		width: 15%;
		max-width: 64px;
		margin: 0 10px;
	}
	.img-container-countries {
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
	}
</style>