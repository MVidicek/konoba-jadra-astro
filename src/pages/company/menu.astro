---
import Layout from '../../layouts/Page.astro';
import HeroSection from '../../components/sections/heros/HeroSection.astro';

const seo = {
	title: 'Menu | Jadra',
	description: 'Restaurant Menu Page',
};
---

<Layout {seo}>
	<HeroSection>	
			<picture slot="image-container-drinks">
				<img
					src="/assets/images/menu/drinks-hr.png"
					alt="Menu Drinks"
					id="home-hero-image-drinks"
				/>
			</picture>
    <picture slot="image-container">
      <img
        src="/assets/images/menu/menu-hr.png"
        alt="Menu Food"
        id="home-hero-image"
      />
    </picture>
	</HeroSection>
</Layout>