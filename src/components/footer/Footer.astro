---
import { Container } from "@odyssey-theme/components";

const { footerSocials, background, color} = Astro.props;
---

<footer style={background && `--footer-bg:${background}; --footer-color:${color}`}>
  <Container>
  <div class="footer-grid__container">
    <div class="footer-brand__container">
      <div>
        <slot name="logo"></slot>
      </div>
      <ul class="footer-socials__list">
          {footerSocials.map(social => (
            <li class="footer-socials__item">
              <a href={social.url} target="_blank" rel="noopener noreferrer" class="footer-socials__link" set:html={social.icon}>                
              </a>            
            </li>
          ))}
      </ul>
    </div>
    </div>
  </Container>
</footer>

<style>
  footer {
    --footer-bg: var(--theme-primary);
    --footer-color: var(--theme-on-primary);
    min-height: 100vh;
    background-color: var(--footer-bg);
    background: url(assets/footer-bg.jpg) no-repeat center center fixed;
    color: var(--footer-color);
    border-top-left-radius: var(--theme-shape-radius);
    border-top-right-radius: var(--theme-shape-radius);
  }
  .footer-grid__container {
    padding: 10vh 0 1rem 0;
    display: flex;
  }
  .footer-socials__list {
    margin: 1rem 0;
    padding: 0;
    display: flex;
    list-style: none;
    justify-content: center;
  }
  .footer-socials__item {
    margin-right: 0.5rem;
  }
  .footer-link__list {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  .footer-link__list li a {
    text-decoration: none;
  }
  .footer-link__list li a:hover {
    opacity: 0.84;
  }
  .footer-copyright__container p {
    font-size: var(--font-size-sm);
  }
  @media (max-width: 768px) {
    .footer-grid__container :first-child {
      grid-column: 1/-1;
    }
    .footer-grid__container {
      padding: 5vh 0;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }
  @media (max-width: 600px) {
    .footer-grid__container {
      padding: 5vh 0;
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>