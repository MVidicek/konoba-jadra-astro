---
import { Header, Button} from '@odyssey-theme/components';
import Footer from '../components/footer/Footer.astro';
import Layout from './Base.astro';
import type { Props as BaseHeadProps } from '../components/head/BaseHead.astro';
import Logo from '../components/Logo.astro';
import { footerLists, footerSocials } from '../config/footer';


export interface Props {
	seo?: BaseHeadProps;
}

import { nav } from '../config/nav.js';

const { seo } = Astro.props as Props;
---

<Layout seo={seo}>
	<Header rightMenu navData={nav} slot="header">
		<span slot="logo" id="show">
			<Logo />
		</span>
		<Button slot="action-item" href="/company/contact">Contact</Button>
	</Header>
	<div id="page">
		<slot />
	</div>
	<Footer
		slot="footer"
		background="var(--theme-surface-1)"
		color="var(--theme-on-surface-1)"
		footerLists={footerLists}
    footerSocials={footerSocials}
	>
	</Footer>
</Layout>

<style>
	@media only screen and (max-width: 900px) {
    #show {
        display: none;
    }
}
</style>